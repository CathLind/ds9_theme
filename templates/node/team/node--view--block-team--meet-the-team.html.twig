
{% set job = node.field_team_job %}
{% set thumbnails = node.field_thumbnail %}
<div class="col-md-3 col-sm-6 col-xs-12 isotope-item {% for value  in job %}{{ value.target_id }}{% endfor %}">
    <span class="thumb-info thumb-info-hide-wrapper-bg">
        <span class="thumb-info-wrapper">
            <a href="{{ url }}">
                {% for thumbnail  in thumbnails %}
                <img src="{{ file_url(thumbnail.entity.fileuri) }}" alt="" class="img-responsive">
                {% endfor %}
                <span class="thumb-info-title">
                    <span class="thumb-info-inner">{{ label }}</span>
                    <span class="thumb-info-type">{{ content.field_team_job | render | striptags }}</span>
                </span>
            </a>
        </span>
        <span class="thumb-info-caption">
            {% if content.body | render %}
                <span class="thumb-info-caption-text">{{ content.body }}</span>
            {% endif %}

        </span>
    </span>
</div>
